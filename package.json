{
  "name": "@1sat/wallet-toolbox",
  "version": "0.0.1",
  "description": "BSV wallet library extending @bsv/wallet-toolbox with 1Sat Ordinals protocol support",
  "author": "1Sat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b-open-io/1sat-wallet-toolbox.git"
  },
  "keywords": [
    "bsv",
    "bitcoin",
    "ordinals",
    "1sat",
    "wallet"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target browser --define 'process.env={}' --define 'global=globalThis' --sourcemap=inline && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "test": "bun test"
  },
  "dependencies": {
    "@bsv/sdk": "^1.9.24",
    "@bsv/wallet-toolbox": "^1.7.14",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.4",
    "typescript": "^5.9.3"
  }
}
